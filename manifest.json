{
  "manifest_version": 3,
  "name": "Text Blackout",
  "version": "1.0",
  "description": "Highlight text to black it out. Click again to undo.",
  "action": {
    "default_icon": "BlackOut.png",
    "default_title": "Text Blackout (click to enable)"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
